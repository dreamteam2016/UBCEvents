<style>
     #frontPage {
        padding: 30px 0 10px 0;
    }

    .center-div {
        margin: 0 auto;
        width: 100%;
    }
    .centerBlock {
        display: table;
        margin: 0 auto;
    }
    .thumbnail {
        margin-top: 30px;
        margin-bottom: 10px;
    }
</style>

<div id="frontPage">
    <div class="center-div" style="text-align:center">
        <p style="font-size:5em;">UBCEvents</p>

        <div style="display:inline-block; width:100px;"></div>
        
        <div class="btn-group text-center">
            <button type="button" class="btn btn-default"><a href="/reccentre/-KBanIIWQzHcDAehkjjK/events">Rec Centre</a></button>
            <button type="button" class="btn btn-default"><a href="/amsclubevent/-KBbA3i6Ce7VEGhHQNUx/events">AMS Clubs</a></button>
            <button type="button" class="btn btn-default">UBC Faculty</button>
            <button type="button" class="btn btn-default">Free Food</button>
            <button type="button" class="btn btn-default">Others</button>
        </div>

        <div style="display:inline-block; width:100px;">
            <input type="checkbox" name="all" checked />
            <label for="all">All Events</label>
        </div>
    </div>
    <div class="center-div">
    </div>
</div>

<div class="row" style="text-align:center;">
    {{#each model as |event|}}
    <div class="col-xs-3 col-md-3">
        <div class="centerBlock">
            <a href="#" class="thumbnail" style="height:180px; width:171px;"></a>
        </div>
        {{event.name}} at {{event.location}}
