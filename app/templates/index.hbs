<style>
    #frontPage {
        padding: 30px 0 10px 0;
    }

    .center-div {
        margin: 0 auto;
        width: 100%;
    }

    .centerBlock {
        display: table;
        margin: 0 auto;
    }

    .thumbnail {
        margin-top: 30px;
        margin-bottom: 10px;
    }
</style>

<div class="row" style="text-align:center;">
    {{#each model as |event|}}

    <div class="col-xs-3 col-md-3">
        <div class="centerBlock">
          {{#if event.amsclubevent}}
         <img src="{{event.amsclubevent.imagePath}}" class="thumbnail" style="height:180px; width:171px;">
         {{/if}}
         {{#if event.freefood}}
         <img src="{{event.freefood.imagePath}}" class="thumbnail" style="height:180px; width:171px;">
         {{/if}}
          {{#if event.reccentre}}
         <img src="{{event.reccentre.imagePath}}" class="thumbnail" style="height:180px; width:171px;">
         {{/if}}
            {{#if event.ubcfaculty}}
         <img src="{{event.ubcfaculty.imagePath}}" class="thumbnail" style="height:180px; width:171px;">
         {{/if}}
            {{#if event.other}}
         <img src="{{event.other.imagePath}}" class="thumbnail" style="height:180px; width:171px;">
         {{/if}}
        </div>
        <button type="button" class="btn btn-link" data-toggle="modal" data-target="#{{event.id}}">{{event.name}}</button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="{{event.id}}" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{event.name}}</h4>
                </div>

        <div class="modal-body">
          
          <p>Location: {{event.location}}</p>
          <p>Room Number: {{event.roomNumber}}</p>
          <p>Event Day: {{event.eventDay}}</p>
          <p>Event Time: {{event.eventTime}}</p>
          <p>Descripition: {{event.description}}</p>
        </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>

            </div>

        </div>

    </div>
    <!-- End Modal-->
    {{/each}}
</div>

